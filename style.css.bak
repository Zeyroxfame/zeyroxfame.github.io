body {
	background-color: #000000;
}

p, h1, h2, h3, h4, h5, h6, ul, li, ol, footer {
	color: white;
	
}

.nobullet {
	list-style: none;
}

a {
	color: #6E1BAD;
}

a:hover {
	text-decoration: none;
}

a:visited {
	color: pink;
}

.centered {
	text-align: center;
}

.nopadding {
padding: 0;
text-decoration: none;
}

.main-container {
  width: 100%;
  display:flex;
  flex-direction: row;
  flex: auto 0;
  justify-content: space-between;
}	